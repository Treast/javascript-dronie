{
  "name": "webpack4-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A Webpack4 boilerplate, with Typescript & TSLint",
  "main": "dist/main.min.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.js --hot --progress --color --inline",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "test": "mocha --require babel-register --reporter=nyan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Treast/webpack4-typescript-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "webpack4",
    "boilerplate",
    "starter",
    "typescript"
  ],
  "author": "Vincent Riva <vincent.riva@outlook.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Treast/webpack4-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/Treast/webpack4-typescript-boilerplate#readme",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/core-js": "^0.9.36",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.2.2",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.16.5",
